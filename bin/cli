#!/usr/bin/env node

var debug = require('debug')('Node.im:Cli');
var pkg = require('../package.json');
var NodeIM = require('../node.im');
var UI = require('../libs/ui');

// UI Events
UI.on('close', function() {
  return process.exit(0);
});

debug(NodeIM.profile);

if (!NodeIM.profile) {
  return UI.signup(function(err, user) {
    if (err)
      return UI.alert(err);

    UI.initMessager(user);
  });
}

return UI.initMessager(NodeIM.profile);
